<?xml version="1.0"?>
<robot name="indoor_wall">
  <link name="base_link">
    <visual>
      <geometry>
  <box size="10 0.2 3"/>  <!-- 墙壁：10m长，0.2m厚，3m高 -->
      </geometry>
      <material name="white_wall">
        <color rgba="0.9 0.9 0.9 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
  <box size="10 0.2 3"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1000.0"/>  <!-- 墙壁质量很大，确保固定不动 -->
      <inertia ixx="100.0" ixy="0.0" ixz="0.0" iyy="100.0" iyz="0.0" izz="100.0"/>
    </inertial>
  </link>
</robot>
